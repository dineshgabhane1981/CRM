@model LMSWeb.ViewModel.TblUserViewModel

<div class="pt-3 pl-3 pr-3 course-list-container list-box">
    <div class="row pt-3 pl-4">
        <div class="col-sm-12">
            @Html.HiddenFor(model => model.objCRMAgreement.AgreementId, new { @id = "hdnAgreementId" })
            @Html.TextBoxFor(model => model.objCRMAgreement.AgreementName, new { @class = "input150", placeholder = "Agreement Name", @id = "txtAgreementName" })
            @Html.TextBoxFor(model => model.objCRMAgreement.AgreementContent, new { @class = "input100", @id = "txtAgreementContent" })
            @*@Html.TextAreaFor(model => model.objCRMAgreement.AgreementContent, new { @class = "input100", id = "agreementcontentarea" })*@
        </div>
    </div>
    <div class="row col-12 justify-content-end p-2">
        <button type="button" id="btnAgreementSave" onclick="AddAgreementToDB()" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Save Changes</button>
        <button type="button" id="btnAgreementCancel" onclick="CloseAddAgreementSection()" class="btn btn-primary profle-submit-btn mr-4"> Cancel</button>
    </div>
</div>

