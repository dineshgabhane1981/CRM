@model LMSWeb.ViewModel.CRMUserViewModel
@{

    Layout = null;
}


<div class="container-fluid mt-4 mb-4 pl-4 pr-4">
    <div class="mt-5 pt-3 pl-3 pr-3 course-list-container list-box">

        <div class="row mt-3" id="dvQualificationData">
            <div class="table-responsive">
                <table class="table" id="qualificationTable">
                    <thead>
                        <tr>
                            <th scope="col">Qualification</th>
                            <th scope="col">Awarded Body</th>
                            <th scope="col">Country</th>
                            <th scope="col">Exempt</th>
                            <th scope="col">Date Awarded</th>


                            @* <th scope="col" style="text-align:center;">Status</th>*@
                            <th scope="col" style="text-align:center;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.ObjCRMUserQualificationList != null)
                            {
                                if (Model.ObjCRMUserQualificationList.Count > 0)
                                {

                                    foreach (var item in Model.ObjCRMUserQualificationList)
                                    {
                                        //LMSWeb.App_Start.CommonFunctions common = new LMSWeb.App_Start.CommonFunctions();
                                        //string userId = common.EncryptString(Convert.ToString(user.Id));
                                        <tr>
                                            <td>@item.Qualification</td>
                                            <td>@item.AwardingBody</td>
                                            <td>@item.Country</td>
                                            <td>@item.Exempt</td>
                                            <td>@item.DateAwarded.ToString("dd/MM/yyyy")</td>


                                            <td style="text-align:center;">
                                                <a href="#" onclick="DeleteQualification(@item.QualificationId);" class="login" title="Delete Qualification"><img width="20" src="~/assets/images/trash.png" /></a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" align="center">No User Available</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" align="center">No User Available</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">No User Available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('#qualificationTable').DataTable({
            "aaSorting": [[4, "desc"]],
            "paging": false,
            "ordering": false,
            "info": false,
            "bFilter": false,
            "pageLength": 10,
            "pagingType": "simple_numbers",
            aoColumnDefs: [
                {
                    bSortable: false,
                    aTargets: [-1, -2]
                }
            ]
        });

        $('#qualificationTable_filter').hide();
    });
</script>